 Stage 1: Builder
FROM golang:1.24-alpine AS builder
WORKDIR /app

# Install protoc + plugins
RUN apk add --no-cache git protobuf protobuf-dev build-base \
    && go install google.golang.org/protobuf/cmd/protoc-gen-go@latest \
    && go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest \
    && go install github.com/grpc-ecosystem/grpc-gateway/v2/protoc-gen-grpc-gateway@latest \
    && go install github.com/grpc-ecosystem/grpc-gateway/v2/protoc-gen-openapiv2@latest

ENV PATH="$PATH:/go/bin"

# Copy go.mod and go.sum from project root
# This step needs to be done manually, as it depends on your local go.mod file
# RUN go mod download

# Copy backend and third_party
COPY backend/ ./backend/
COPY third_party/ ./third_party/

# Generate proto code
RUN protoc -I backend -I third_party/googleapis \
    --go_out=backend/pb --go_opt=paths=source_relative \
    --go-grpc_out=backend/pb --go-grpc_opt=paths=source_relative \
    --grpc-gateway_out=backend/pb --grpc-gateway_opt=paths=source_relative \
    backend/employee.proto

# Build server binary
RUN go build -o /app/server ./backend

# Stage 2: Final image
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/server .
EXPOSE 50051 8080
CMD ["./server"]


