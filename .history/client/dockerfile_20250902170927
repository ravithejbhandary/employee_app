# Stage 1: Builder
FROM golang:1.24-alpine AS builder
WORKDIR /app

# Copy go.mod and go.sum
COPY go.mod go.sum ./
RUN go mod download

# Copy client AND backend/pb so imports resolve
COPY client/ ./client/
COPY backend/pb/ ./backend/pb/

# Build client binary
RUN go build -o client ./client/main.go

# Stage 2
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/client .
CMD ["./client"]
