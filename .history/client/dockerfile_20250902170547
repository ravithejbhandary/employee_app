# Stage 1: Builder
FROM golang:1.24-alpine AS builder
WORKDIR /app

# Copy go.mod and go.sum from root
COPY go.mod go.sum ./
RUN go mod download

# Copy client source code
COPY client/ ./client/

# Build client binary
RUN go build -o client ./client/main.go

# Stage 2: Final image
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/client .
CMD ["./client"]
