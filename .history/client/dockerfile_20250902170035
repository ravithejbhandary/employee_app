# client/dockerfile
FROM golang:1.20-alpine AS builder
WORKDIR /app

# Copy go.mod and go.sum from root
COPY ../go.mod ../go.sum ./

# Download dependencies
RUN go mod download

# Copy client source code
COPY . .

# Build client binary
RUN go build -o client main.go

# Final stage
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/client .
CMD ["./client"]
